@page "/"
@inject HttpClient Http

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<br />
<div class="mt-3">
    <button @onclick="SeedData" disabled="@isSeeding">Seed Sample Data</button>

    @if (seedMessage != null)
    {
        <p>@seedMessage</p>
    }
</div>


@code {
    private bool isSeeding = false;
    private string? seedMessage;

    private async Task SeedData()
    {
        try
        {
            isSeeding = true;
            seedMessage = null;

            var response = await Http.PostAsync("https://localhost:7271/api/seed", null);

            if (response.IsSuccessStatusCode)
            {
                seedMessage = "✅ Sample data seeded successfully!";
            }
            else
            {
                seedMessage = $"❌ Seeding failed: {response.StatusCode}";
            }
        }
        catch (HttpRequestException httpEx)
        {
            seedMessage = $"⚠️ HTTP Error: {httpEx.Message}";
        }
        catch (Exception ex)
        {
            seedMessage = $"⚠️ Error: {ex.Message}";
        }
        finally
        {
            isSeeding = false;
        }
    }
}