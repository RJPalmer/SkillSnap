@page "/profile-card"
@using SkillSnap.Shared.Models
@using SkillSnap_Client.Services
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject ISkillSnapApiClient ApiClient
@inject ILogger<ProfileCard> Logger

<h3>User Profile</h3>

@if (userProfile == null)
{
    <p>Loading profile...</p>
}
else
{
    <div class="profile-card">
        <img src="@userProfile.ProfilePictureUrl" alt="Profile picture of @userProfile.Name" class="profile-picture" />
        <h2>@userProfile.Name</h2>
        <p>@userProfile.Bio</p>
    </div>
}

@code {
    private PortfolioUser? userProfile;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userProfile = await ApiClient.GetUserProfileAsync();
            if (userProfile == null)
            {
                errorMessage = "Profile not found.";
                Logger.LogWarning("Profile not found for current user");
            }
        }
        catch (AccessTokenNotAvailableException)
        {
            // Handled by the client, which will redirect to login
            Logger.LogInformation("User not authenticated, redirecting to login");
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading profile. Please try again later.";
            Logger.LogError(ex, "Error loading user profile");
        }
    }
}

<style>
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f9f9f9;
        padding: 1.5rem;
        border-radius: 10px;
        max-width: 400px;
        margin: 2rem auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    h2 {
        margin: 0.5rem 0;
    }

    p {
        text-align: center;
        color: #555;
    }
</style>