@page "/profile-card"
@using SkillSnap.Shared.Models
@using SkillSnap.Shared.DTOs
@using SkillSnap_Client.Services
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject ISkillSnapApiClient ApiClient
@inject ILogger<ProfileCard> Logger

<h3>User Profile</h3>

<div class="profile-card">
    <img src="@GetProfileImage()" alt="Profile picture of @userProfile?.Name ?? 'Loading...'" class="profile-picture" />

    <div class="profile-info">
        <div class="info-row">
            <strong>Name:</strong>
            <span>@(userProfile?.Name ?? "Loading...")</span>
        </div>
        <div class="info-row">
            <strong>Bio:</strong>
            <span>@(userProfile?.Bio ?? "Fetching bio...")</span>
        </div>
    </div>
</div>

@if (errorMessage != null)
{
    <p class="error">@errorMessage</p>
}

@code {
    private PortfolioUserDto? userProfile;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userProfile = await ApiClient.GetUserProfileAsync();
            if (userProfile == null)
            {
                errorMessage = "Profile not found.";
                Logger.LogWarning("Profile not found for current user");
            }
        }
        catch (AccessTokenNotAvailableException)
        {
            Logger.LogInformation("User not authenticated, redirecting to login");
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading profile. Please try again later.";
            Logger.LogError(ex, "Error loading user profile");
        }
    }

    private string GetProfileImage()
    {
        return userProfile?.ProfileImageUrl ?? "/images/default_picture.jpeg";
    }
}

<style>
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f9f9f9;
        padding: 1.5rem;
        border-radius: 10px;
        max-width: 400px;
        margin: 2rem auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .profile-info {
        width: 100%;
        text-align: left;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    strong {
        width: 80px;
    }

    .error {
        text-align: center;
        color: red;
        margin-top: 1rem;
    }
</style>