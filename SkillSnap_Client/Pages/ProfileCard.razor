@page "/profile-card"
@using SkillSnap.Shared.Models
@using SkillSnap.Shared.DTOs
@using SkillSnap_Client.Services
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject ISkillSnapApiClient ApiClient
@inject ILogger<ProfileCard> Logger

<h3>User Profile</h3>

<div class="profile-card">
    <img src="@GetProfileImage()" alt="Profile picture of @(editableProfile?.Name ?? userProfile?.Name ?? "Loading...")" class="profile-picture" />

    @if (isEditing)
    {
        <div class="edit-form">
            <label>Name:</label>
            <input @bind="editableProfile.Name" />

            <label>Bio:</label>
            <textarea @bind="editableProfile.Bio"></textarea>

            <label>Profile Image URL:</label>
            <input @bind="editableProfile.ProfileImageUrl" />

            <button @onclick="SaveProfile">Save</button>
            <button @onclick="CancelEdit">Cancel</button>
        </div>
    }
    else
    {
        <div class="profile-info">
            <div class="info-row">
                <strong>Name:</strong>
                <span>@(userProfile?.Name ?? "Loading...")</span>
            </div>
            <div class="info-row">
                <strong>Bio:</strong>
                <span>@(userProfile?.Bio ?? "Fetching bio...")</span>
            </div>
            <button @onclick="EnterEditMode">Edit Profile</button>
        </div>
    }
</div>

@if (errorMessage != null)
{
    <p class="error">@errorMessage</p>
}

@code {
    private PortfolioUserDto? userProfile;
    private string? errorMessage;

    private bool isEditing = false;
    private PortfolioUserDto? editableProfile;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userProfile = await ApiClient.GetUserProfileAsync();
            if (userProfile == null)
            {
                errorMessage = "Profile not found.";
                Logger.LogWarning("Profile not found for current user");
            }
        }
        catch (AccessTokenNotAvailableException)
        {
            Logger.LogInformation("User not authenticated, redirecting to login");
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading profile. Please try again later.";
            Logger.LogError(ex, "Error loading user profile");
        }
    }

    private string GetProfileImage()
    {
        return (editableProfile?.ProfileImageUrl ?? userProfile?.ProfileImageUrl) ?? "/images/default_picture.jpeg";
    }

    private void EnterEditMode()
    {
        if (userProfile != null)
        {
            editableProfile = new PortfolioUserDto
            {
                Id = userProfile.Id,
                Name = userProfile.Name,
                Bio = userProfile.Bio,
                ProfileImageUrl = userProfile.ProfileImageUrl
            };
            isEditing = true;
            errorMessage = null;
        }
    }

    private async Task SaveProfile()
    {
        try
        {
            if (editableProfile != null)
            {
                // Basic validation
                if (string.IsNullOrWhiteSpace(editableProfile.Name))
                {
                    errorMessage = "Name cannot be empty.";
                    return;
                }

                var success = await ApiClient.UpdateUserProfileAsync(editableProfile.Id.ToString(), editableProfile);
                if (success)
                {
                    userProfile = editableProfile;
                    isEditing = false;
                    errorMessage = null;
                }
                else
                {
                    errorMessage = "Failed to update profile.";
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating profile");
            errorMessage = "Error updating profile.";
        }
    }

    private void CancelEdit()
    {
        isEditing = false;
        editableProfile = null;
        errorMessage = null;
    }
}

<style>
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f9f9f9;
        padding: 1.5rem;
        border-radius: 10px;
        max-width: 400px;
        margin: 2rem auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .profile-info {
        width: 100%;
        text-align: left;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    strong {
        width: 80px;
    }

    .error {
        text-align: center;
        color: red;
        margin-top: 1rem;
    }

    .edit-form {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
    }
</style>