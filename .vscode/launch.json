{
    // Launch configurations to start both API and Blazor client together.
    // Use the compound "Launch API and Client" to start both.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch SkillSnap_API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SkillSnap_API/bin/Debug/net9.0/SkillSnap_API.dll",
            "cwd": "${workspaceFolder}/SkillSnap_API",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch SkillSnap_Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SkillSnap_Client/bin/Debug/net9.0/SkillSnap_Client.dll",
            "cwd": "${workspaceFolder}/SkillSnap_Client",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch API and Client",
            "configurations": [
                "Launch SkillSnap_API",
                "Launch SkillSnap_Client"
            ]
        }
    ]
}